<div class="row justify-content-center">
  <div class="col-12 col-sm-8">
        
    <h3 class="mb-6 uppercase mt-5">CREAR VIAJE</h3>
    <div class="separator-simple mx-auto"></div>
    <form action="/travels" method="post" enctype="multipart/form-data">

      <div class="form-check mb-3">
        <label for="destination" class="form-check-label my-2 mt-5">Destinos:</label><br>
        <input type="radio" class="form-check-input {{#if errors.destination}}is-invalid{{/if}}" name="destination" value="national">
        <label for="html">Nacionales</label><br>
        <input type="radio" class="form-check-input {{#if errors.destination}}is-invalid{{/if}}" name="destination" value="europe">
        <label for="css">Por Europa</label><br>
        
        <div class="invalid-feedback">{{ errors.destination }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Título</label>
        <input type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" name="title" value="{{ travel.title }}" placeholder="..." />
        <div class="invalid-feedback">{{ errors.title }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Imagen</label>
        <input type="file" class="form-control {{#if errors.image}}is-invalid{{/if}}" name="image" value="{{ travel.image }}" placeholder="..." />
        <div class="invalid-feedback">{{ errors.image }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Precio</label>
        <input type="number" class="form-control {{#if errors.price}}is-invalid{{/if}}" name="price" value="{{ travel.price }}" placeholder="" />
        <div class="invalid-feedback">{{ errors.price }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Ciudad</label>
        <input type="text" class="form-control {{#if errors.location}}is-invalid{{/if}}" name="location" value="{{ travel.location }}" placeholder="..." />
        <div class="invalid-feedback">{{ errors.location }}</div>
      </div>

      <div class="form-check mb-3">
        <label for="exampleInputEmail1" class="form-check-label">Modo de transporte</label><br>
        <input type="radio" class="form-check-input {{#if errors.tripMode}}is-invalid{{/if}}" name="tripMode" value="coche">
        <label for="html">Coche</label><br>
        <input type="radio" class="form-check-input {{#if errors.tripMode}}is-invalid{{/if}}" name="tripMode" value="avión">
        <label for="css">Avión</label><br>
        
        <div class="invalid-feedback">{{ errors.tripMode }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Descripción</label>
        <input type="textarea" class="form-control {{#if errors.description}}is-invalid{{/if}}" name="description" value="{{ travel.description }}" placeholder="..." />
        <div class="invalid-feedback">{{ errors.description }}</div>
      </div>

      <div class="mb-3">
        <label for="duration" class="form-label">Duración</label>
        <input type="number" class="form-control {{#if errors.duration}}is-invalid{{/if}}" name="duration" value="3" disabled="" />
        <div class="invalid-feedback">{{ errors.duration }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-check-label">Key Words</label><br>
          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="forest">
          <label for="forest">Bosque</label><br>

          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="culture">
          <label for="culture">Cultural</label><br>

          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="guide">
          <label for="guide">Guía</label><br>

          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="food">
          <label for="food">Gastronómico</label><br>

          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="sea">
          <label for="sea">Playa</label><br>

          <input type="checkbox" class="form-check-input {{#if errors.keyWords}}is-invalid{{/if}}" name="keyWords" value="romantic">
          <label for="romantic">Romántico</label><br>
          
        <div class="invalid-feedback">{{ errors.keyWords }}</div>
      </div>

      <div class="mb-3">
        <label for="exampleInputEmail2" class="form-label">Hotel</label>
        <input type="text" class="form-control {{#if errors.hotel.name}}is-invalid{{/if}}" name="hotel[name]" value="{{ travel.hotel.name }}" placeholder="..." />
      </div>

      <div class="mb-3">
        <label for="exampleInputEmail2" class="form-label">Descripción</label>
        <input type="textarea" class="form-control {{#if errors.hotel.description}}is-invalid{{/if}}" name="hotel[description]" value="{{ travel.hotel.description }}" placeholder="..." />
      </div>

       <div class="mb-4">
        <label for="exampleInputEmail2" class="form-label">Imagen del hotel</label>
        <input type="file" class="form-control {{#if errors.hotel.image}}is-invalid{{/if}}" name="hotelImage" value="{{ travel.hotel.image }}" placeholder="..." />
      </div>

      <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="validationFormCheck1" required>
        <label class="form-check-label" for="validationFormCheck1">Estoy de acuerdo</label>
        <div class="invalid-feedback">Debes hacer click</div>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary text-uppercase">Crear</button>
      </div>
      
    </form>
  </div>
</div>
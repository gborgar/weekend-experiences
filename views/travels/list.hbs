<div class="container my-5">
  <div class="row">
    {{#each travels as |travel|}}
    <div class="col-6">
      <div class="card m-2">
        <div class="g-0">
          <div class="row g-0">

            <div class="col-7 travel-card-image" style="background-image: url({{travel.image}})">
            </div>

            <div class="col-5">
              <div class="card-body">
                <h5 class="card-title text-center fs-5 mt-0">{{travel.title}}</h5>
                <div class="separator-card"></div> 
            
                <ul>
                  <li></i>Viaje en: {{travel.tripMode}}</li>
                  <li>{{travel.duration}} días</li>
                  <li>{{#setKeyWords travel.keyWords}}{{/setKeyWords}}</li>
                </ul>

                  <h6 class="card-title"><i class="fa fa-bed fa-lg --fa-li-margin ml-34"></i>   {{travel.hotel.name}}</h6>
                <div class="travel-price fs-6">Precio: {{travel.price}}€</div>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                <a href="/travels/{{travel.id}}/detail" class="btn btn-secondary btn-sm d-grid gap-2 text-align-center">Ver más</a>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>